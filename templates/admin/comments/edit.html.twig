{% extends "admin/base.html.twig" %}

{% block title %}Modification du commentaire n° {{comments.id}} {% endblock %}
{% form_theme form _self %}

{% block body %}
    <div class="container">



        <div class="alert alert-info">
            <strong>Annonce liée :</strong> {{comments.ad.title}}<br>
            <strong>Auteur : </strong>{{comments.ad.author.fullName}}<br>
            <strong>Date de création : </strong>{{comments.createdAt|date('d/m/Y H:i')}}<br>
            <strong> Note : </strong>{{comments.rating | number_format(1, ',', ' ')}}<br>
        </div>

        {{form_start(form)}}

        {{form_widget(form)}}

        <button class="btn btn-primary" type="submit">Modifier le commentaire</button>
        {{form_end(form)}}

    </div>
{% endblock %}